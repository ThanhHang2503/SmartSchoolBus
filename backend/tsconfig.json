{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "verbatimModuleSyntax": false
  },
  "include": [
    "models/**/*.ts",
    "student/**/*.ts",
    "config/**/*.ts",
    "account/**/*.ts",
    "parent/**/*.ts",
    "admin/**/*.ts",
    "driver/**/*.ts",
    "stats/**/*.ts",
    "route/**/*.ts",
    "notice/**/*.ts",
    "Notification/**/*.ts",
    "backend/**/*.ts",
    "*.ts"
  ],
  "exclude": ["node_modules"]
}
